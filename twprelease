#!/bin/bash

# Prepare Testimonials Widget Premium for release
#
# @author Michael Cannon <mc@aihr.us>

KEY="twp"
DIR_UPLOAD="2012/11"
ID_POST=14635
ID_PRODUCT=14714
ID_CHANGELOG=16129

source ~/.skel/bin/custom/wpinit ${KEY}
echo

if [[ -z ${1} ]]
then
	echo "What's the version number?"
	echo
	exit 1
fi

VERSION=${1}
wprelease ${KEY} ${VERSION} || exit 1;
wpdocument ${KEY} ${DIR_UPLOAD} ${ID_POST} ${ID_PRODUCT} ${ID_CHANGELOG}