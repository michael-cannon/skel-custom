#!/bin/bash

# Prepare Testimonials Widget for release
#
# @author Michael Cannon <mc@aihr.us>

KEY="tw"

source ~/.skel/bin/custom/wpinit ${KEY}
echo

if [[ -z ${1} ]]
then
	echo "What's the version number?"
	echo
	exit 1
else
	VERSION=${1}
fi

wpsvnrelease ${KEY} ${VERSION} || exit 1;

${CMD_SCP} ~/Downloads/zzz-wp/${PLUGIN}.zip aihrus@aihr.us:~/public_html/wp-content/uploads/edd/2013/05/. || exit 1;

mvim ${SITE_WP_PLUGINS}/${PLUGIN}/readme.txt
# details
open http://aihr.us/wp-admin/post.php?post=16103\&action=edit
# product
open http://aihr.us/wp-admin/post.php?post=16754\&action=edit